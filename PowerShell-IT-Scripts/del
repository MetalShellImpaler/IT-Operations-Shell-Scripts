# Get the current user language list
$LanguageList = Get-WinUserLanguageList

# Remove Hebrew language if it exists
$LanguageToRemove = "he-IL"  # Hebrew (Israel)
if ($LanguageList.LanguageTag -contains $LanguageToRemove) {
    $LanguageList.RemoveAll({ $_.LanguageTag -eq $LanguageToRemove })
}

# Apply the changes
Set-WinUserLanguageList -LanguageList $LanguageList -Force
